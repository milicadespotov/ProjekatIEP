<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="text/stylesheet" href="..\..\Content\Site.css" />


</head>
<body>
    <nav class="navbar navbar-expand-xl bg-dark navbar-dark">
        <!-- Brand -->
        @Html.ActionLink("Auctions", "Index", "Auctions", new { area = "" }, new { @class = "navbar-brand" })
        <div id="notif" class="d-none"> @Html.ActionLink("New", "Index", "Auctions", new { @class = "btn btn-danger navbar-brand" }) </div>
        <!-- Toggler/collapsibe Button -->
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Navbar links -->
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                  
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Auctions", "Index", "Auctions")
                </li>
                @if (Request.IsAuthenticated)
                {
                <li class="nav-item">
                    @Html.ActionLink("Won Auctions", "WonAuctions", "Auctions")
                </li>
                }
                @if (User.IsInRole("Admin"))
                {
                    <li class="nav-item">
                        @Html.ActionLink("Ready Auctions", "GetAllReady", "Auctions");
                    </li>
                }
                    <li class="nav-item d-none" id= "refresh">
                        
                       
                    </li>
            </ul> 
                @Html.Partial("_LoginPartial")
                 
        </div>
    </nav>
    <div class="behid-nav" style="height: 100px;">

    </div>





